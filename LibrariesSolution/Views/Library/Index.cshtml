@model IEnumerable<LibrariesSolution.Models.Library>

@{
    ViewData["Title"] = "Index";
}

<h1>Library List</h1>

<p>
     @* <a asp-action="Create">Create New Library</a>  *@
     @Html.ActionLink("Create New Library", "Create") 
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                Shelfs count
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Library item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShelfList.Count)
                </td>
            <td>
                @Html.ActionLink("Library details", "Details", new { id = item.Id}) |
                    @Html.ActionLink("Add new shelf", "AddShelf", new { libraryId = item.Id }) |
            </td>
        </tr>
}
    </tbody>
</table>
